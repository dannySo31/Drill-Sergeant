<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns="http://www.w3.org/ns/widgets"
        xmlns:rim="http://www.blackberry.com/ns/widgets"
        version="1.0.0.0">   
  <rim:navigation mode="focus" />
  <name>Drill Sergeant</name>
  <description>Fitness instructor from hell!</description>
  <author>Checkwell Decision Inc.</author>
  <icon src="img\logo.png" />
  <icon src="img\logo.png" rim:hover="true" />
  <rim:loadingScreen backgroundImage="images\background.png" foregroundImage="images\hippo.png" onFirstLaunch="true">
    <rim:transitionEffect type="fadeIn" />
  </rim:loadingScreen>
  <content src="index.html" />
  <rim:permissions>
    <rim:permit>bbm_connect</rim:permit>
    <rim:permit>access_shared</rim:permit>
    <rim:permit>run_when_backgrounded</rim:permit>
  </rim:permissions>
 <feature id="blackberry.app.orientation">
    <param name="mode" value="portrait" />
  </feature>
  <feature id="blackberry.ui.cover" />
  <access uri="http://chart.apis.google.com" subdomains="true" />
  <access uri="*" subdomains="true" />
  <access uri="http://facebook.com" subdomains="true" />
  <access uri="https://facebook.com" subdomains="true" />
  <access uri="http://fbcdn.net" subdomains="true" />
  <access uri="https://fbcdn.net" subdomains="true" />
  <feature id="blackberry.push" />
  <feature id="blackberry.message.sms" />

  <feature id="blackberry.ui.menu" />
  <feature id="blackberry.ui.dialog"/>
  <feature id="blackberry.identity" />
  <feature id="blackberry.system.event" />
  <feature id="blackberry.app" />
  <feature id="blackberry.app.event"/>
  <feature id="blackberry.bbm.platform" />
</widget>